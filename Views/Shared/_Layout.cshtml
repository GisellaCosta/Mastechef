<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/master.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg bg-body-tertiary">
            <div class="container-fluid">
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                       
                        <li class="nav-item dropdown" style="margin-left:50px;">
                            <a class="nav-link dropdown-toggle text-black" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                MASTERCHEF
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="#">MASTERCHEF BRASIL</a></li>
                                <li><a class="dropdown-item" href="#">MASTERCHEF PROFISSIONAIS</a></li>
                                <li><a class="dropdown-item" href="#">MASTERCHEF +</a></li>
                                <li><a class="dropdown-item" href="#">MASTERCHEF JÚNIOR</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown" style="margin-left:50px;">
                            <a class="nav-link dropdown-toggle text-black" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                JURADOS
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="#">HELENA RIZZO</a></li>
                                <li><a class="dropdown-item" href="#">ÉRICK JACQUIN</a></li>
                                <li><a class="dropdown-item" href="#">HENRIQUE FOGAÇA</a></li>
                                <li><a class="dropdown-item" href="#">RODRIGO OLIVEIRA</a></li>
                                <li><a class="dropdown-item" href="#">PAOLA CAROSELLA</a></li>
                            </ul>
                        </li>
                    </ul>
                    <form class="d-flex w-50 p-3" role="search">
                        <input class="form-control me-2" type="search" placeholder="BUSQUE SEU PRATO FAVORITO" aria-label="PESQUISE SEU PRATO FAVORITO">
                        <button class="btn btn-warning text-white" type="submit">BUSCAR</button>
                    </form>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid" style="padding-left:0; padding-right:inherit; ">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <style>
        ul.dropdown-menu {
            color: #000;
        }

        .navbar-nav > li > .dropdown-menu a {
            color: #000000;
        }
    </style>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - master - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
